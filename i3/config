# Set the super/windows key for the mod key.
set $mod Mod4

# exit i3
bindsym $mod+Shift+x exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# reload the configuration file
bindsym $mod+Ctrl+r restart

# Automatically change the display layout based on current connected monitors.
exec --no-startup-id autorandr --change

# Set the font
font pango:Cousine Nerd Font Mono 16

# Launch a program
bindsym Mod1+space exec --no-startup-id rofi -show drun
bindsym $mod+space exec --no-startup-id rofi -show window

# kill focused window
bindsym $mod+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# move workspace to display
bindsym $mod+Mod1+l move workspace to output right
bindsym $mod+Mod1+j move workspace to output up
bindsym $mod+Mod1+k move workspace to output down
bindsym $mod+Mod1+h move workspace to output left

# split in horizontal and vertical orientation
bindsym $mod+b split v
bindsym $mod+v split h

# enter fullscreen/monacle mode for the focused container
bindsym $mod+m fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+r layout toggle split
# bindsym $mod+s layout stacking
# bindsym $mod+w layout tabbed
# bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+f floating toggle

# change focus between tiling / floating windows
bindsym $mod+g focus mode_toggle

# focus the parent container
# bindsym $mod+p focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9

bindsym $mod+Ctrl+h resize shrink width 10 px or 10 ppt
bindsym $mod+Ctrl+j resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+k resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+l resize grow width 10 px or 10 ppt

# Lock the screen
bindsym $mod+Delete exec i3lock -c 1a1b26

# Borders
default_border pixel 4
hide_edge_borders both

# Gaps
gaps inner 10
gaps horizontal -10
gaps vertical -10
smart_gaps on

# Focused window (active)
client.focused #ffffff #ffffff #ffffff #ffffff #9ece6a

#Unfocused window (inactive)
client.unfocused #ffffff #ffffff #ffffff #ffffff #565f89

# Focused inactive window (another window in the same workspace)
client.focused_inactive #ffffff #ffffff #ffffff #ffffff #7aa2f7

# Picom (gray out unfocused)
exec --no-startup-id ~/.config/i3/scripts/picom.sh

# Scrolling direction / natural scrolling
# Neets to sleep so device is created and ready after reload.
# Moved to /etc/X11/xorg.conf.d/10-libinput-touchpad.conf
# exec_always --no-startup-id sh -c 'sleep 1 && xinput set-prop "ELAN06FA:00 04F3:327E Touchpad" "libinput Natural Scrolling Enabled" 1 && xinput set-prop "ELAN06FA:00 04F3:327E Touchpad" "libinput Tapping Enabled" 1'
bindsym $mod+Ctrl+m exec --no-startup-id ~/.config/i3/scripts/toggleMouse.sh

# CapsLock
exec_always --no-startup-id ~/.config/i3/scripts/capsLock.sh
exec_always --no-startup-id /usr/bin/numlockx on

# Volumen control
bindsym XF86AudioMute exec --no-startup-id /usr/bin/amixer set Master toggle
bindsym XF86AudioLowerVolume exec --no-startup-id /usr/bin/amixer set Master 5%-
bindsym XF86AudioRaiseVolume exec --no-startup-id /usr/bin/amixer set Master 5%+
bindsym $mod+Down exec --no-startup-id /usr/bin/amixer set Master 5%-
bindsym $mod+Up   exec --no-startup-id /usr/bin/amixer set Master 5%+

# Brightness control
bindsym XF86MonBrightnessUp exec --no-startup-id /usr/bin/brightnessctl set +5%
bindsym XF86MonBrightnessDown exec --no-startup-id /usr/bin/brightnessctl set 5%-
bindsym $mod+Right exec --no-startup-id /usr/bin/brightnessctl set +5%
bindsym $mod+Left exec --no-startup-id /usr/bin/brightnessctl set 5%-

# Screenshot tool
bindsym Print exec --no-startup-id flameshot screen
# bindsym $mod+Ctrl+s exec --no-startup-id flameshot gui
bindsym $mod+Ctrl+s exec --no-startup-id flameshot gui -r | xclip -selection clipboard -t image/png

# Set background
# exec_always --no-startup-id sh -c 'feh --bg-fill $HOME/sync/rice/wallpapers/getherCrop.jpg'
exec_always --no-startup-id sh -c 'feh --bg-fill "$(find ~/sync/rice/wallpapers/chromebookWallpapers -type f | shuf -n1)"'

# Change eDP-1 for different display mapping(HDMI-1, DP-1, etc.). Use xrandr to view available outputs.
exec_always --no-startup-id xsetwacom set "Wacom Intuos BT M Pen stylus" MapToOutput eDP-1
exec_always --no-startup-id xsetwacom set "Wacom Intuos BT M Pen stylus" Button 2 "key Ctrl z"
exec_always --no-startup-id xsetwacom set "Wacom Intuos BT M Pen stylus" Button 3 "key Ctrl Shift z"

exec_always --no-startup-id xsetwacom set "Wacom Intuos BT M Pad pad" Button 1 "x"
exec_always --no-startup-id xsetwacom set "Wacom Intuos BT M Pad pad" Button 2 "e"
exec_always --no-startup-id xsetwacom set "Wacom Intuos BT M Pad pad" Button 3 "q"
exec_always --no-startup-id xsetwacom set "Wacom Intuos BT M Pad pad" Button 4 "key Delete"

# Open programs for specific workspace
set $ws0 "0. All other"
set $ws1 "1. Nvim"
set $ws2 "2. Web"
set $ws3 "3. Term"
set $ws4 "4. PDF"

bindsym $mod+a workspace $ws0
bindsym $mod+n workspace $ws1
bindsym $mod+i workspace $ws2
bindsym $mod+t workspace $ws3
bindsym $mod+z workspace $ws4

bindsym $mod+shift+a move container to workspace $ws0 workspace $ws0
bindsym $mod+shift+n move container to workspace $ws1 workspace $ws1
bindsym $mod+shift+i move container to workspace $ws2 workspace $ws2
bindsym $mod+shift+t move container to workspace $ws3 workspace $ws3
bindsym $mod+shift+z move container to workspace $ws4 workspace $ws4

assign [class="neovide"] $ws1
assign [class="qutebrowser"] $ws2
assign [class="Vivaldi-stable"] $ws2
assign [class="st-256color"] $ws3
assign [class="Zotero"] $ws4
assign [class="Zathura"] $ws4
assign [class=".*"] $ws0

for_window [class="st-256color" instance="qutebrowser"] move to workspace $ws2

exec_always --no-startup-id i3-msg '[class="neovide"] move to workspace $ws1'
exec_always --no-startup-id i3-msg '[class="qutebrowser"] move to workspace $ws2'
exec_always --no-startup-id i3-msg '[class="Vivaldi-stable"] move to workspace $ws2'
exec_always --no-startup-id i3-msg '[class="st-256color"] move to workspace $ws3'
exec_always --no-startup-id i3-msg '[class="Zotero"] move to workspace $ws4'
exec_always --no-startup-id i3-msg '[class="Zathura"] move to workspace $ws4'

# Keyboard shortcut for manual laucnh
# Here are the parameters that are os specific
include ~/.config/i3/params

# bindsym $mod+Ctrl+n exec --no-startup-id /usr/bin/neovide --neovim-bin $nvim_bin; workspace $ws1
# bindsym $mod+Ctrl+i exec --no-startup-id $qute_command; workspace $ws2
bindsym $mod+Ctrl+t exec --no-startup-id st; workspace $ws3
bindsym $mod+Ctrl+x exec --no-startup-id st tmux; workspace $ws3

# Mount server, should be last for timout reasons.
exec_always --no-startup-id ~/.config/i3/scripts/serverMount.sh
